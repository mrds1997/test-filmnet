<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/margin_page_half"
    android:layout_marginBottom="@dimen/margin_page_half"
    app:cardCornerRadius="4dp"
    android:id="@+id/layoutMain"
    app:cardBackgroundColor="@color/grey">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:id="@+id/imgMovie"/>
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imgMovie"
            android:textColor="@color/yellow"
            android:textSize="18sp"
            android:padding="4dp"
            android:layout_margin="4dp"
            android:fontFamily="@font/iransans_fa_bold"
            android:maxLines="2"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvTitle"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:fontFamily="@font/iransans_fa_medium"
            android:padding="4dp"
            android:layout_margin="4dp"
            android:id="@+id/tvDesc"/>


    </RelativeLayout>


</androidx.cardview.widget.CardView>